{
    "name": "lekoala/silverstripe-multilingual",
    "description": "i18n tools for SilverStripe",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "multilingual",
        "i18n",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "LeKoala",
            "email": "thomas@lekoala.be"
        }
    ],
    "require": {
        "php": "^8.1",
        "silverstripe/recipe-plugin": "^2",
        "silverstripe/vendor-plugin": "^2",
        "silverstripe/framework": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^2.1",
        "deeplcom/deepl-php": "^1.16",
        "tractorcow/silverstripe-fluent": "^7.3"
    },
    "suggest": {
        "tractorcow/silverstripe-fluent": "Add multi locales support",
        "lekoala/silverstripe-excel-import-export": "Better import/export tools"
    },
    "extra": {
        "installer-name": "multilingual"
    },
    "autoload": {
        "psr-4": {
            "LeKoala\\Multilingual\\": "src/",
            "LeKoala\\Multilingual\\Test\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-multilingual/issues"
    },
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/",
        "phpstan": "phpstan analyze src/ tests/",
        "test": "phpunit -v"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
